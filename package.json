{
  "name": "neogrok",
  "version": "0.0.1",
  "description": "A snappier frontend for zoekt",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --fail-on-warnings",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint --report-unused-disable-directives --max-warnings 0 .",
    "format": "prettier --write .",
    "test": "vitest"
  },
  "author": "Ian Kerins <npm@isk.haus>",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/adapter-node": "1.3.1",
    "@sveltejs/kit": "1.25.1",
    "@types/lucene": "2.1.5",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-svelte": "2.34.0",
    "prettier": "3.0.3",
    "prettier-plugin-svelte": "3.0.3",
    "svelte": "4.2.1",
    "svelte-check": "3.5.2",
    "tailwindcss": "3.3.3",
    "type-fest": "4.4.0",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vitest": "0.34.6"
  },
  "dependencies": {
    "@badrap/valita": "0.3.0",
    "lucene": "2.1.1",
    "lucide-svelte": "0.256.1",
    "pretty-bytes": "6.1.1"
  }
}
