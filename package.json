{
  "name": "neogrok",
  "version": "0.0.1",
  "description": "A snappier frontend for zoekt",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --fail-on-warnings",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint --report-unused-disable-directives --max-warnings 0 .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "vitest"
  },
  "author": "Ian Kerins <npm@isk.haus>",
  "license": "MIT",
  "devDependencies": {
    "@sveltejs/adapter-node": "1.2.4",
    "@sveltejs/kit": "1.20.5",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "eslint": "8.43.0",
    "@types/lucene": "2.1.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-svelte": "2.31.1",
    "prettier": "2.8.8",
    "prettier-plugin-svelte": "2.10.1",
    "svelte": "4.0.0",
    "svelte-check": "3.4.4",
    "tailwindcss": "3.3.2",
    "type-fest": "3.12.0",
    "typescript": "5.1.3",
    "vite": "4.3.9",
    "vitest": "0.32.2"
  },
  "dependencies": {
    "@badrap/valita": "0.2.1",
    "@wooorm/starry-night": "2.1.1",
    "lucide-svelte": "0.256.1",
    "lucene": "2.1.1",
    "pretty-bytes": "6.1.0"
  }
}
